<view>
  <!-- 输入框 -->
  <view class="Search">
    <view class="input">
      <icon type="search"></icon>
      <input placeholder="请输入你想要的的商品" bindinput="inputshijian" value="{{inputValue}}" bindblur="inputshijiao" bindconfirm="huicheEnter"></input>
    </view>
    <view class="button" wx:if="{{inputValue}}" bindtap="cancel">取消</view>
  </view>
  <!-- 历史搜索 -->
  <view class="search-history">
    <view class="title">
      <text>历史搜索</text>
      <icon type="clear" bindtap="qingkongls"></icon>
    </view>
    <!-- 展示搜索建议 -->
    <view class="suggest" wx:if="{{suggestList.length}}">
      <navigator url="" wx:for="{{suggestList}}" wx:key="index">{{index+1}}. {{item.goods_name}}</navigator>

    </view>
    <!-- 历史展示 -->
    <view class="history">
      <!-- 历史 -->
      <navigator url="/pages/goods_list/index?keyword={{item}}" class="lishijl" wx:for="{{search_history}}" wx:key="index">
        {{item}}
      </navigator>
    </view>
  </view>
  <!--  -->
</view>