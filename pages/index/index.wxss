/**index.wxss**/

.search {
  padding: 20rpx;
  background: #ff2d4a;
}

.input {
  background: #fff;
  width: 100%;
  height: 60rpx;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #c7c7c7;
}

/*/////轮播图*/

.swiper {
  width: 100%;
  height: 340rpx;
}

.swiper image {
  width: 100%;
  height: 340rpx;
}

/* 导航栏 */

.navList {
  width: 100%;
  height: 180rpx;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.navList-fils {
  width: 150rpx;
  height: 180rpx;
}

.navList-fils navigator {
  width: 100%;
  height: 100%;
}

.navList-fils image {
  width: 100%;
  height: 100%;
}

/* 楼层 */

.floor {
  margin-bottom: 20rpx;
  /* width:100%; *//* display: flex; *//* justify-content: space-around; */
}

.floor-title {
  padding-top: 16rpx;
  width: 100%;
  height: 59rpx;
  background: #f4f4f4;
  /* flex: 1 */
}

.floor .content {
  margin-top: 20rpx;
  margin-left: 10rpx;
  display: flex;
}

.content .daimage {
  width: 232rpx;
  height: 386rpx;
  margin-right: 10rpx;
}

.content .rest {
  /* width: 508rpx; */
  flex: 1;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.rest image {
  width: 235rpx;
  height: 188rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
}

